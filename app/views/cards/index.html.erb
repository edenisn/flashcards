<h3>Все карточки</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID колоды</th>
      <th>Оригинальное слово</th>
      <th>Перевод</th>
      <th>Картинка</th>
      <th>Дата создания</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <% @cards.each do |card| %>
    <tbody>
      <tr>
        <td><%= card.pack_id %></td>
        <td><%= card.original_text %></td>
        <td><%= card.translated_text %></td>
        <td><%= card.image_file_name %></td>
        <td><%= card.review_date.strftime("%d/%m/%Y") %></td>
        <td><%= link_to 'Редактировать', edit_card_path(card) %></td>
        <td><%= link_to 'Удалить', card_path(card),
                method: :delete,
                data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    </tbody>
  <% end %>
</table>
