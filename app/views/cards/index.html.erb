<div class="container">

  <h3>Все карточки</h3>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Оригинальное слово</th>
        <th>Перевод</th>
        <th>Дата создания карточки</th>
      </tr>
    </thead>

    <% @cards.each do |card| %>
      <tbody>
        <tr>
          <td><%= card.original_text %></td>
          <td><%= card.translated_text %></td>
          <td><%= card.review_date.strftime("%m/%d/%Y") %></td>
        </tr>
      </tbody>
    <% end %>
</table>

</div>