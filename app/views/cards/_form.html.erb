<%= simple_form_for card do |f| %>
  <%= f.input :original_text %>
  <%= f.input :translated_text %>
  <%= f.input :image, as: :file %>
  <%= f.input :review_date, as: :date %>
  <%= label_tag 'Имя новой колоды:' %>
  <%= text_field_tag 'card[new_pack_name]' %>
  <%= f.input :pack_id, collection: current_user.packs.all %>
  <%= f.button :submit, t('forms.buttons.submit') %>
<% end %>
