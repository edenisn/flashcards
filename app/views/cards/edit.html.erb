<h3>Редактирование карточки</h3>
<%= simple_form_for @card do |f| %>
  <%= f.input :original_text, label: 'Оригинальное слово' %>
  <%= f.input :translated_text, label: 'Перевод' %>
  <%= f.input :image, as: :file, label: 'Картинка для карточки' %>
  <%= f.input :review_date, as: :date, label: 'Дата создания' %>
  <%= f.association :pack, label: 'Выбрать колоду' %>
  <%= f.button :submit, 'Создать/Обновить' %>
<% end %>
<p id="notice"><%= notice %></p>